{
  "compilerOptions": {
    "module": "es6",
    "target": "es5",
    "lib": ["es7", "dom"],
    "jsx": "react",
    "moduleResolution": "node",
    "baseUrl": ".",
    "sourceMap": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "skipLibCheck": true
  }
}
